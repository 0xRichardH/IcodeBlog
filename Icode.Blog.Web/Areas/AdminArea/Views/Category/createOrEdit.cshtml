@{
    ViewBag.Title = string.Format("{1}{0}", ViewBag.TypeTitle, ViewBag.OptionTitle);
    Layout = "~/Areas/AdminArea/Views/Shared/_LayoutPage.cshtml";
}

@section breadcrumb{
    <li><i class="fa fa-laptop"></i>&nbsp;<a href="">分类管理</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
    <li class="active"><a href="#">文章分类</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
    <li class="active">@string.Format("{1}{0}", ViewBag.TypeTitle, ViewBag.OptionTitle)</li>
}
<div class="col-lg-12" ng-controller="CreateCategory">
    <div class="panel panel-blue">
        <div class="panel-heading">@string.Format("{1}{0}", ViewBag.TypeTitle, ViewBag.OptionTitle)</div>
        <div class="panel-body pan">
            <form action="#" class="form-horizontal">
                <input type="hidden" value="@ViewBag.Id" id="categoryId" />
                <input type="hidden" value="@ViewBag.IsCategory" id="isCategory" />
                <div class="form-body pal">
                    <div class="form-group">
                        <label for="inputCategoryname" class="col-md-3 control-label">
                            @string.Format("{0}名称", ViewBag.TypeTitle) <span class='require'>*</span>
                        </label>
                        <div class="col-md-9">
                            <div class="input-icon">
                                <i class="fa fa-laptop"></i>
                                <input id="inputCategoryname" type="text" placeholder="@string.Format("{0}名称", ViewBag.TypeTitle)" class="form-control" maxlength="36" ng-model="categoryName"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectParentCategory" class="col-md-3 control-label">
                            @string.Format("父{0}", ViewBag.TypeTitle)
                        </label>
                        <div class="col-md-9">
                            <select id="selectParentCategory" class="selectpicker form-control" ng-model="parentCategory">
                                <option>--</option>
                                <option ng-repeat="item in items" value="{{item.id}}" ng-selected="item.id == parentCategory">{{item.categoryName}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group mbn">
                        <label for="inputDescription" class="col-md-3 control-label">详细说明</label>
                        <div class="col-md-9">
                            <textarea id="inputDescription" rows="3" class="form-control" ng-model="description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <center>
                        <a href="#" class="btn btn-green" ng-click="save('@ViewBag.RedirectUrl')">保存</a>&nbsp;
                        <a href="#" class="btn btn-primary" ng-click="cancel('@ViewBag.RedirectUrl')">取消</a>
                    </center>
                </div>
            </form>
        </div>
    </div>
</div>

@section script{
    <script src="~/Areas/AdminArea/Content/js/page/create_category.js"></script>
}

