  <connectionStrings>
    <!--PostgreSql 数据连接字符串 配置文件-->
    <add name="Default" connectionString="server=127.0.0.1;User Id=postgres;password=icode!@#;database=ICodeBlog;" providerName="Npgsql" />
    <!--<add name="Default" connectionString="Server=localhost; Database=Blog; Trusted_Connection=True;" providerName="System.Data.SqlClient" />-->
  </connectionStrings>
  <system.data>
    <DbProviderFactories>
      <!--  注意这里，安装程序包时，这里的配置并不会自动添加  -->
      <remove invariant="Npgsql" />
      <add name="Npgsql" invariant="Npgsql" description=".Net Framework Data Provider for Postgresql" type="Npgsql.NpgsqlFactory, Npgsql" />
    </DbProviderFactories>
  </system.data>
  <system.web>
    <globalization culture="auto" uiCulture="auto" />
    <compilation debug="true" targetFramework="4.5.1" />
    <!--移除X-AspNet-Version响应头 enableVersionHeader-->
    <httpRuntime targetFramework="4.5.1" enableVersionHeader="false" />
    <!--<customErrors mode="Off" />-->
    <customErrors mode="On">
      <error statusCode="404" redirect="/404.html" />
    </customErrors>
  </system.web>
